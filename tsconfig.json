{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "#admin-user/*": [
        "src/sga/admin-user/*"
      ],
      "#shared/*": [
        "src/shared/shared/*"
      ],
      "#business-unit/*": [
        "src/sga/business-unit/*"
      ],
      "#edae-user/*": ["src/sga/edae-user/*"],
      "#academic-offering/*": [
        "src/sga/academic-offering/*"
      ],
      "#commands/*": ["src/commands/*"],
      "#config/*": ["config/*"],
      "#test/*": ["test/*"],
      "#/*": ["src/*"],
      "&/*": ["./*"]
    }
  }
}
