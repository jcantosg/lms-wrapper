{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "../templates/*.hbs",
        "outDir": "dist/templates",
        "watchAssets": true
      },
      {
        "include": "../i18n/**/*",
        "outDir": "dist/i18n",
        "watchAssets": true
      }
    ]
  }
}
